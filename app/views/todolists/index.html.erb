<body>

<h1>ToDoList</h1>

<% if @list.errors.any? %>
  <%= @list.errors.count %>件のエラーが発生しました
  <% @list.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<% @lists.each do |list| %>
  <tbody>
      <tr>
        <td><%= list.title %></td>
        <td><%= list.body %></td>
        <td><%= link_to "show",todolist_path(list.id) %></td>
        <td><%= link_to "edit",edit_todolist_path(list.id) %></td>
        <td><%= link_to "delete",todolist_path(list.id), method: :delete %></td>
      </tr>
  </tbody>
  <% end %>
</table>


<h2>New List</h2>
<%= form_with model:@list, url:todolists_path,local:true do |f| %>
<h4>タイトル</h4>
<%= f.text_field :title %>
<h4>本文</h4>
<%= f.text_area :body %>
<%= f.submit "Post" %>
<% end %>
</body>
