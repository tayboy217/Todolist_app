
<h1>Edit</h1>
<% if @list.errors.any? %>
  <%= @list.errors.count %>件のエラーが発生しました
  <% @list.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<!-- form_with部分 -->
<%= form_with model:@list, url:todolist_path, local: true do |f| %>
  <h4>タイトル</h4>
   <%= f.text_field :title %>
  <h4>本文</h4>
   <%= f.text_area :body %>
   <%= f.submit '保存' %>
<% end %>
<%= link_to "show",todolist_path(@list) %>｜<%= link_to "back",todolists_path %>